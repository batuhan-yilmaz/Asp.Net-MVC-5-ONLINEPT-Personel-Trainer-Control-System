@model List<onlinept.Models.Entity.home>


@{
    ViewBag.Title = "ONLINE PT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["homeGuncelle"] != null)
{

    <script>
        Swal.fire('Başarılı', 'İşlem gerçekleşti', 'success');
    </script>
}

@if (TempData["kullaniciguncelle"] != null)
{

    <script>
        Swal.fire('Başarılı', 'İşlem gerçekleşti', 'success');
    </script>
}
@if (TempData["kullaniciGuncelleHata"] != null)
{

    <script>
        Swal.fire('Güncelleme Başarısız', 'İşlem gerçekleştirilemedi', 'error');
    </script>
}


@if (TempData["login"] != null)
{

    <script>


        const Toast = Swal.mixin({
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 6000
        });

            Toast.fire({
                icon: 'success',
                title: 'Merhaba @HttpContext.Current.User.Identity.Name Oturumu açma işleminiz başarıyla gerçekleşti.ONLINE PT Yönetim Sistemine Hoşgeldiniz.'
            })

    </script>
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- /.col -->
                <div class="col-md-9">
                    <div class="card">
                        <div class="card-header p-2">
                            <ul class="nav nav-pills">
                                <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab"><i class="fa fa-bullhorn"> Akış</i></a></li>
                                @if (User.IsInRole("User"))
                                {
                                    <li class="nav-item">
                                        &nbsp;
                                        @Html.ActionLink(" Yeni Akış Oluştur ", "homeekle", null, new { @class = "fa fa-plus btn btn-warning" })
                                    </li>
                                }
                                &nbsp;
                                @if (User.IsInRole("Yonetici"))
                                {
                                    <li class="nav-item">
                                        &nbsp;
                                        @Html.ActionLink(" Yeni Akış Oluştur ", "homeekleyonetim", null, new { @class = "fa fa-plus btn btn-warning" })


                                    </li>
                                }
                                &nbsp;
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item">
                                        &nbsp;
                                        @Html.ActionLink(" Yeni Akış Oluştur ", "homeekleadmin", null, new { @class = "fa fa-plus btn btn-warning" })


                                    </li>
                                }
                            </ul>
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="active tab-pane" id="activity">
                                    <!-- Post -->
                                    @foreach (var home in Model)
                                    {
                                        <div class="post">
                                            <div class="user-block">
                                                <img class="img-circle img-bordered-sm" src="~/Content/Admin/dist/img/oasisLogo.png" alt="user image">
                                                <span class="username">
                                                    <font style="color:@home.color;">
                                                        <i class="fas fa-flag"></i><b>
                                                            Ekleyen: @home.users.name
                                                        </b>

                                                    </font>
                                                    <a class="float-right btn-tool"><font style="color:@home.color;"> @Html.DisplayFor(m => home.date)  <i class="fa fa-clock"></i></font></a>
                                                </span>
                                                <b><span class="description">Öğün : &nbsp; <font style="color:@home.color;">Protein:@home.protein/gr - Karbonhidrat:@home.carb/gr - Yağ:@home.fat/gr - Toplam Kalori:@home.calori/cal </font> </span></b>
                                            </div>
                                            <!-- /.user-block -->
                                            <p>
                                                <b><font style="color:@home.color;">@home.subject </font></b>
                                            </p>

                                            <!-- /.user-block -->
                                            <div class="row mb-3">
                                                &nbsp;
                                                <div class="timeline-footer">
                                                    <a href="~/Content/Admin/data/home/himg/@home.content1" data-toggle="lightbox" data-gallery="gallery">
                                                        <img src="~/Content/Admin/data/home/himg/@home.content1" style="width:130px; height:130px;" class="img-fluid mb-2" />
                                                    </a>
                                                </div>
                                                &nbsp;
                                                <div class="timeline-footer">
                                                    <a href="~/Content/Admin/data/home/himg/@home.content2" data-toggle="lightbox" data-gallery="gallery">
                                                        <img src="~/Content/Admin/data/home/himg/@home.content2" style="width:130px; height:130px;" class="img-fluid mb-2" />
                                                    </a>
                                                </div>
                                                &nbsp;
                                                <div class="timeline-footer">
                                                    <a href="~/Content/Admin/data/home/himg/@home.content3" data-toggle="lightbox" data-gallery="gallery">
                                                        <img src="~/Content/Admin/data/home/himg/@home.content3" style="width:130px; height:130px;" class="img-fluid mb-2" />
                                                    </a>
                                                </div>
                                                &nbsp;
                                                <div class="timeline-footer">
                                                    <a href="~/Content/Admin/data/home/himg/@home.content4" data-toggle="lightbox" data-gallery="gallery">
                                                        <img src="~/Content/Admin/data/home/himg/@home.content4" style="width:130px; height:130px;" class="img-fluid mb-2" />
                                                    </a>
                                                </div>
                                                &nbsp;
                                                <div class="timeline-footer">
                                                    <a href="~/Content/Admin/data/home/himg/@home.content5" data-toggle="lightbox" data-gallery="gallery">
                                                        <img src="~/Content/Admin/data/home/himg/@home.content5" style="width:130px; height:130px;" class="img-fluid mb-2" />
                                                    </a>
                                                </div>
                                                &nbsp;
                                                <div class="timeline-footer">
                                                    <a href="~/Content/Admin/data/home/himg/@home.content6" data-toggle="lightbox" data-gallery="gallery">
                                                        <img src="~/Content/Admin/data/home/himg/@home.content6" style="width:130px; height:130px;" class="img-fluid mb-2" />
                                                    </a>
                                                </div>
                                            </div>
                                            <p>
                                                <b>@home.descriptions</b>
                                            </p>

                                            @if (User.IsInRole("Admin") || User.IsInRole("Yonetici"))
                                            {
                                                <button type="button" class="fa fa-pencil-square-o btn btn-outline-primary" data-toggle="modal" data-target="#guncelle_@home.homeid">Güncelle</button>
                                                <div class="modal fade" id="guncelle_@home.homeid">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h4 class="modal-title">Akışı Güncelle</h4>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <p>Akışı Güncellemek İstiyormusunuz?</p>
                                                            </div>
                                                            <div class="modal-footer justify-content-between">
                                                                <button type="button" class="btn btn-default" data-dismiss="modal">Vazgeç</button>
                                                                @Html.ActionLink("Güncelle", "homeguncelle", new { home.homeid }, new { @class = "fa fa-pencil-square-o btn btn-outline-primary" })
                                                            </div>
                                                        </div>
                                                        <!-- /.modal-content -->
                                                    </div>
                                                    <!-- /.modal-dialog -->
                                                </div>
                                                <!-- /.modal -->
                                            }
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <button type="button" class="fa fa-trash btn btn-outline-danger" data-toggle="modal" data-target="#sil_@home.homeid">Sil</button>
                                                <div class="modal fade" id="sil_@home.homeid">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h4 class="modal-title">Akışı Sil</h4>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <p>Akışı Silmek İstiyormusunuz?</p>
                                                            </div>
                                                            <div class="modal-footer justify-content-between">
                                                                <button type="button" class="btn btn-default" data-dismiss="modal">Vazgeç</button>
                                                                @Html.ActionLink("Sil", "homesil", new { home.homeid }, new { @class = "fa fa-trash btn btn-outline-danger" })
                                                            </div>
                                                        </div>
                                                        <!-- /.modal-content -->
                                                    </div>
                                                    <!-- /.modal-dialog -->
                                                </div>
                                                <!-- /.modal -->
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</div>
<script>
    $(function () {
        $(document).on('click', '[data-toggle="lightbox"]', function (event) {
            event.preventDefault();
            $(this).ekkoLightbox({
                alwaysShowClose: true
            });
        });

    })
</script>