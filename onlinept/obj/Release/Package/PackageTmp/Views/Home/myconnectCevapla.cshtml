@model onlinept.Models.Entity.myconnect

@{
    ViewBag.Title = "Soru-İletişim Cevapla";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.link = "";
    ViewBag.menuactive = "";
}

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-9">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Mesajı Cevapla</h3>
                        </div>
                        @using (Html.BeginForm("myconnectCvp", "Home", FormMethod.Post, new { @enctype = "multipart/from-data" }))
                        {
                            <!-- /.card-header -->
                            <div class="card-body">
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.youremail, new { @readonly = "false", @class = "form-control", id = "email", type = "email", @required = "required", placeholder = "Alıcı:" })
                                </div>
                                <div class="form-group">
                                    <p>Konu:</p>
                                    @Html.TextBoxFor(m => m.subject, new { @readonly = "false", oninput = "customtext(this.id);", @class = "form-control", @required = "required", placeholder = "Konu:" })
                                </div>
                                <div class="form-group">
                                    <p>Mesaj:</p>
                                    @Html.TextAreaFor(m => m.Body, new { oninput = "customtext(this.id);", @rows = 5, @cols = 40, @class = "form-control", @required = "required", placeholder = "Mesaj:" })
                                </div>
                                <div class="form-group">
                                    @Html.HiddenFor(m => m.Email, new { @Value = "oasiscontrolcenter@gmail.com", @class = "form-control", id = "email", @required = "required", placeholder = "Gönderem E-Mail:" })
                                </div>
                                <div class="form-group">
                                    @Html.HiddenFor(m => m.Password, new { @Value = "oasiscontrol77", @class = "form-control", @required = "required", placeholder = "Gönderen Password:" })
                                    @Html.HiddenFor(m => m.myconnectid)
                                </div>
                                <div class="float-left">
                                    <div class="btn btn-default btn-file">
                                        <i class="fas fa-paperclip"></i> Dosya Ekle
                                        <input type="file" name="Attachments" multiple="multiple" />

                                    </div>
                                    <p class="help-block">Max. 32MB</p>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="float-right">
                                    <button type="submit" value="Send" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                                </div>
                            </div>
                        }


                    </div>
                </div>

            </div>
        </div>
    </section>
</div>


